<h4 class = 'bottom-margin-1 span2'><%=@city_name%></h4>
<form action='/admin/areas' id ='areas_for_city'>
  <input type="hidden" class='span2' name='area[city_id]' placeholder="Nombre"  value='<%=@city_id%>'>
  <input type="text" class='span2' id="new_area_name" name='area[name]' placeholder="Nombre">
  <button type="submit" class="btn btn-primary" id='create_area'>Agregar a esta ciudad</button>
</form>