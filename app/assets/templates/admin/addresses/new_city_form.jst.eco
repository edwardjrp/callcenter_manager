<form action='/admin/cities' class="form-horizontal">
  <div class="control-group">
    <label class="control-label" for="new_city_name">Nombre</label>
    <div class="controls">
      <input type="text" id="new_city_name" name='city[name]' placeholder="Nombre">
    </div>
  </div>
  <div class="form-actions">
    <button type="submit" class="btn btn-primary" id='create_city'>Agregar Ciudad</button>
  </div>
</form>