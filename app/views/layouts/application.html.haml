!!!
%html
  %head
    %title= @title || "Domino's"
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
  %body{id: controller_name}
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .brand Domino's
          .nav-collapse
            -if user_signed_in?
              =render_navigation :expand_all => true, :renderer => :bootstrap
            %ul.nav.pull-right
              -if user_signed_in?
                %li= link_to current_user.full_name, '#'
                %li.divider-vertical
                %li= link_to "Cerrar Sesión", logout_path, :id=>'end_session'
              -else
                %li= link_to "Iniciar sesión", login_path
    = render :partial => 'cart_info'
    .container.bottom-margin-1
      .row
        .span12
          - flash.each do |name, msg|
            %div{:class => "alert alert-#{name == :notice ? "success" : name }"}
              %a.close{"data-dismiss" => "alert"} ×
              = msg
          / =current_cart.inspect if Rails.env.development?
          = yield