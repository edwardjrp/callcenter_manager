  %i.icon.icon-share
  Importar cliente
=render 'modal', :modal_id => 'import_client_modal', :title=>'Importar cliente'
- if @clients.any?
  =will_paginate @clients
  %table.table.table-striped.table-bordered.table-condensed#clients_list
    %thead
      %th Nombre
