.row
  .span12
    #users_carts_count.dashboard_datatable
      %h3 Por ordenes colocadas
      %table.table.table-striped.table-bordered
        %thead
          %th Nombre
          %th Ordenes colocadas
          %th Ordenes monto promedio de la orden
        %tbody
          - @users_per_carts_by_counts.each do |user_carts|
            %tr
              %td= user_carts["user"].full_name
              %td= user_carts[:carts_count]
              %td= number_to_currency user_carts[:payment_amount]
