=simple_form_for [:admin, @store], html: {class: 'form-horizontal'} do |f|
  %fieldset
    %legend
      =" #{controller.action_name.capitalize} #{f.object.class}"
    = f.input :name
    = f.input :address
    = f.input :storeid
    = f.association :city
    = f.input :ip  
    .form-actions
      =f.button :submit
      = link_to 'Cancel', admin_stores_path, :class => 'btn'