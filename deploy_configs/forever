#!/bin/bash
#APP_ROOT=/Library/WebServer/kapiqua25/current/
APP_ROOT=/Users/EdwardData/Sites/kpiqa25/current/
forever_bin="/usr/local/bin/forever"
pidfile="/Users/EdwardData/Sites/kpiqa25/shared/pids/forever.pid"
outputlog="/Users/EdwardData/Sites/kpiqa25/shared/log/node_out.log"
errorlog="/Users/EdwardData/Sites/kpiqa25/shared/log/node_err.log"
app_script="/Users/EdwardData/Sites/kpiqa25/current/kapiquajs/dst/app.js"

touch $outputlog

touch $errorlog

touch $pidfile

sig () {
  test -s "$pidfile" && kill -$1 `cat $pidfile`
}

cd $APP_ROOT || exit 1

export NODE_ENV=production

echo $NODE_ENV

CMD="$forever_bin --pidfile $pidfile -l $outputlog -e $errorlog -a start $app_script"

$CMD

case $action in
start)
  sig 0 && echo >&2 "Already running" && exit 0
  $CMD
  ;;
stop)
  sig QUIT && exit 0
  echo >&2 "Not running"
  ;;
force-stop)
  sig TERM && exit 0
  echo >&2 "Not running"
  ;;
*)
  echo >&2 "Usage: $0 <start|stop>"
  exit 1
  ;;
esac
